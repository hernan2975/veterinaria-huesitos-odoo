<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Categoría para medicamentos veterinarios -->
        <record id="product_category_medicamentos" model="product.category">
            <field name="name">Medicamentos Veterinarios</field>
            <field name="parent_id" ref="product.product_category_all"/>
        </record>
        
        <!-- Plantilla de productos para medicamentos -->
        <record id="product_template_ivermectina" model="product.template">
            <field name="name">Ivermectina 1% Inyectable</field>
            <field name="categ_id" ref="product_category_medicamentos"/>
            <field name="type">product</field>
            <field name="default_code">SENASA-12345-67890</field>
            <field name="list_price">120.0</field>
            <field name="standard_price">80.0</field>
            <field name="uom_id" ref="uom.product_uom_unit"/>
            <field name="uom_po_id" ref="uom.product_uom_unit"/>
            <field name="description">
                1 ml por cada 50 kg de peso vivo. Vía subcutánea.
                Registro SENASA: SENASA-12345-67890
            </field>
        </record>
        
        <record id="product_template_amoxidal" model="product.template">
            <field name="name">Amoxidal 15%</field>
            <field name="categ_id" ref="product_category_medicamentos"/>
            <field name="type">product</field>
            <field name="default_code">SENASA-34567-89012</field>
            <field name="list_price">280.0</field>
            <field name="standard_price">180.0</field>
            <field name="uom_id" ref="uom.product_uom_unit"/>
            <field name="uom_po_id" ref="uom.product_uom_unit"/>
            <field name="description">
                1 ml por cada 15 kg cada 48 hs. Vía intramuscular.
                Registro SENASA: SENASA-34567-89012
                ⚠️ Requiere receta veterinaria
            </field>
        </record>
    </data>
</odoo>
