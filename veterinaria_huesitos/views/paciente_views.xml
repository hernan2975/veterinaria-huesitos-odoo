<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista formulario paciente -->
    <record id="view_paciente_form" model="ir.ui.view">
        <field name="name">veterinaria_huesitos.paciente.form</field>
        <field name="model">veterinaria_huesitos.paciente</field>
        <field name="arch" type="xml">
            <form string="Paciente">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nombre del paciente"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="especie"/>
                            <field name="raza"/>
                            <field name="sexo"/>
                            <field name="fecha_nacimiento"/>
                            <field name="edad" readonly="1"/>
                            <field name="peso_kg"/>
                        </group>
                        <group>
                            <field name="cliente_id" options="{'no_create': True}"/>
                            <field name="senasa_id"/>
                            <field name="chip"/>
                            <field name="color"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Foto" name="foto">
                            <field name="image" widget="image" class="oe_avatar"/>
                        </page>
                        <page string="Historial Clínico" name="historial">
                            <field name="historial_ids">
                                <tree editable="bottom">
                                    <field name="fecha_atencion"/>
                                    <field name="motivo_consulta"/>
                                    <field name="diagnostico"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vista lista paciente -->
    <record id="view_paciente_tree" model="ir.ui.view">
        <field name="name">veterinaria_huesitos.paciente.tree</field>
        <field name="model">veterinaria_huesitos.paciente</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="especie"/>
                <field name="raza"/>
                <field name="cliente_id"/>
                <field name="edad"/>
                <field name="peso_kg"/>
                <field name="chip"/>
            </tree>
        </field>
    </record>

    <!-- Acción ventana -->
    <record id="action_paciente" model="ir.actions.act_window">
        <field name="name">Pacientes</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">veterinaria_huesitos.paciente</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
